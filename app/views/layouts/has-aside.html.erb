<!DOCTYPE html>
<html lang="ms">
  <head>
    <%= display_meta_tags(default_meta_tags) %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'fonts', 'data-turbolinks-track': 'reload', async: true %>
    <%= javascript_include_tag 'https://static.addtoany.com/menu/page.js', 'data-turbolinks-track': true, async: true %>
  </head>

  <body>
    <%= render partial: 'layouts/partials/header' %>
    <%= render partial: 'layouts/partials/notice' %>
    <div class="row">
      <div class="medium-8 columns">
        <main role="main">
          <%= yield %>
        </main>
      </div>
      <div class="medium-4 columns">
        <main role="main">
          <%= render partial: 'layouts/partials/aside' %>
        </main>
      </div>
    </div>
  </body>
</html>
