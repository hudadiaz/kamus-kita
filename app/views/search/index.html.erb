<% if @words.present? %>
  <% @words.each do |word| %>
    <%= render 'words/word', word: word, definition: word.best_definition %>
  <% end %>
  <%= paginate @words %>
<% else %>
  <h4>No result found, check this word:</h4>

  <%= render 'words/word', word: @random_word, definition: @random_word.best_definition %>
<% end %>
