<p>
  <%= definition.definition %>
</p>
<p>
  <em><%= definition.example %></em>
</p>
<p>
  <% if definition.user %>
    by <%= link_to definition.user.handle, definition.user %> at
  <% else %>
    by unknown at
  <% end %>
  <%=  link_to definition.created_at.strftime('%d %B %Y'), definition_path(definition) %>
</p>
<div>
  <%= link_to like_definition_path(definition), method: :post, style: 'vertical-align: top' do %>
    <svg fill="#777" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
      <path d="M0 0h24v24H0z" fill="none"/>
      <path d="M1 21h4V9H1v12zm22-11c0-1.1-.9-2-2-2h-6.31l.95-4.57.03-.32c0-.41-.17-.79-.44-1.06L14.17 1 7.59 7.59C7.22 7.95 7 8.45 7 9v10c0 1.1.9 2 2 2h9c.83 0 1.54-.5 1.84-1.22l3.02-7.05c.09-.23.14-.47.14-.73v-1.91l-.01-.01L23 10z"/>
    </svg>
    <%= definition.likes_counter %>
  <% end %>
  &nbsp;
  &nbsp;
  <%= link_to dislike_definition_path(definition), method: :post, style: 'vertical-align: top' do %>
    <svg fill="#777" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
      <path d="M0 0h24v24H0z" fill="none"/>
      <path d="M15 3H6c-.83 0-1.54.5-1.84 1.22l-3.02 7.05c-.09.23-.14.47-.14.73v1.91l.01.01L1 14c0 1.1.9 2 2 2h6.31l-.95 4.57-.03.32c0 .41.17.79.44 1.06L9.83 23l6.59-6.59c.36-.36.58-.86.58-1.41V5c0-1.1-.9-2-2-2zm4 0v12h4V3h-4z"/>
    </svg>
    <%= definition.dislikes_counter %>
  <% end %>
</div>
