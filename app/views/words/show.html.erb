<% if @word_not_found %>
  <h4>No record for <em><%= params[:id] %></em>, checkout <em><%= @word.word %></em> or <%= link_to 'add your definition', new_definition_path(word: params[:id]) %></h4>
<% end %>
<% @definitions.each do |definition| %>
  <div class="callout">
    <h1><%= link_to definition.original_word, word_path(@word) %></h1>

    <%= render 'definitions/definition', definition: definition %>
  </div>
<% end %>
<%= paginate @definitions %>
