<h3>Sign up</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="medium-12 columns">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: false %>
    </div>
  </div>

  <div class="row">
    <div class="medium-12 columns">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br/>
        <a onclick="return false" href="#" class="generate-random-password">Generate password</a>
      <% end %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>

  <div class="row">
    <div class="medium-12 columns">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <div class="callout">
        <input type="checkbox" id="agreement" required="true" style="margin: 0"><label for="agreement">I agree to the <%= link_to 'Privacy Policy', privacy_path, target: :_blank %></label>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="medium-12 columns">
      <%= f.submit "Sign up", class: 'button' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
